<div class="container mt-5 col-4">
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>

    <%- include('partials/messages') %>
    <form action="/users/register" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Your Name"
                value="<%= typeof name != 'undefined' ? name : '' %>">
            <small class="form-text text-muted">* Required</small>
        </div>

        <div class="form-group">
            <label for="email">E-Mail</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Your E-Mail"
                value="<%= typeof email != 'undefined' ? email : '' %>">
            <small class="form-text text-muted">* Required</small>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control"
                placeholder="Your Password in at least 8 characters"
                value="<%= typeof password != 'undefined' ? password : '' %>">
            <small class="form-text text-muted">* Required</small>
        </div>

        <hr>
        <button type="submit">Register</button>
    </form>
</div>

<div class="container col-4">
    <p>Already have an account? <a href="/users/login">Sign in</a>.</p>
</div>